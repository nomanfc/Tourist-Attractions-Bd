<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.PlaceDetailsActivity">

    <LinearLayout
        android:id="@+id/placelist_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/top_image"
            android:layout_width="match_parent"
            android:layout_height="326dp"
            android:layout_gravity="center"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/detailed_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place Name"

            android:padding="5dp"
            android:fontFamily="@font/roboto"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/CyanDeep_text"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:id="@+id/locationOnMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="37dp"
                android:layout_height="27dp"
                android:background="@drawable/location"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/detailed_address"
                android:layout_width="369dp"
                android:layout_height="43dp"
                android:layout_marginTop="2dp"
                android:textColor="#212181"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:text="place address"
                android:textSize="17sp" />
        </LinearLayout>



        <TextView
            android:id="@+id/detailed_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:textColor="#FFAB00"
            android:textStyle="bold"
            android:padding="5dp"
            android:fontFamily="@font/roboto"
            android:textSize="18sp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/detailed_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="place details"
            android:lineSpacingExtra="2dp"
            android:padding="8dp"
            android:fontFamily="@font/roboto"
            android:textSize="18sp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:text="More Images"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/image_1"
            android:layout_width="match_parent"
            android:layout_height="326dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY" />
        <ImageView
            android:id="@+id/image_2"
            android:layout_width="match_parent"
            android:layout_height="326dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY" />
        <ImageView
            android:id="@+id/image_3"
            android:layout_width="match_parent"
            android:layout_height="326dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:paddingBottom="5dp"
            />




    </LinearLayout>
</androidx.core.widget.NestedScrollView>